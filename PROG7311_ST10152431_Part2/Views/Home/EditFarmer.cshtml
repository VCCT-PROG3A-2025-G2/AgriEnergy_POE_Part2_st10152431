@model PROG7311_ST10152431_Part2.Models.Farmer

@{
    ViewData["Title"] = "Edit Farmer";
}
<body style="font-family:'Cascadia Mono'; background-color:#FAF9F6">
<h2>Edit Farmer</h2>

<form asp-action="EditFarmer" method="post">
    <input type="hidden" asp-for="FarmerId" />
    <div>
        <label asp-for="FarmerName"></label>
        <input asp-for="FarmerName" class="form-control" />
    </div>
    <div>
        <label asp-for="FarmerSurname"></label>
        <input asp-for="FarmerSurname" class="form-control" />
    </div>
    <div>
        <label asp-for="FarmerPassword"></label>
        <input asp-for="FarmerPassword" class="form-control" type="password" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
</body>
