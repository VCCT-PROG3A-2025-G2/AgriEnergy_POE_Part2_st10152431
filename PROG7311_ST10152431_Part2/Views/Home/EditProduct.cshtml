@model PROG7311_ST10152431_Part2.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}
<body style="background-color:#FAF9F6; font-family:'Cascadia Mono'">

<h2>Edit Product</h2>

<form asp-action="EditProduct" method="post">
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="FarmerId" />
    <div class="mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ProductCategory" class="form-label"></label>
        <input asp-for="ProductCategory" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ProductionDate" class="form-label"></label>
        <input asp-for="ProductionDate" class="form-control" type="date" />
    </div>
    <div class="mb-3">
        <label asp-for="ProductPrice" class="form-label"></label>
        <input asp-for="ProductPrice" class="form-control" type="number" step="0.01" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
</body>