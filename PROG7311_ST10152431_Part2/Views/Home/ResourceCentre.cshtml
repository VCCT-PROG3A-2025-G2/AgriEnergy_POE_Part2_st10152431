@{
    ViewData["Title"] = "Resource Centre";
}

<body style="background-color:#FAF9F6; font-family:'Cascadia Mono'">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h1 style="font-size:2.5rem; color:darkolivegreen; font-weight:bold;">@ViewData["Title"]</h1>
            <p style="font-size:1.1rem; color:#555;">
                Explore helpful guides, tips, and resources to boost your agricultural success.
            </p>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h4 class="card-title" style="color:darkolivegreen;">Farming Guides</h4>
                        <p class="card-text">Step-by-step guides for crop and livestock management.</p>
                        <a href="#" class="btn btn-outline-success disabled">Coming Soon</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h4 class="card-title" style="color:darkolivegreen;">Market Trends</h4>
                        <p class="card-text">Stay updated with the latest agricultural market trends.</p>
                        <a href="#" class="btn btn-outline-success disabled">Coming Soon</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h4 class="card-title" style="color:darkolivegreen;">Support & Community</h4>
                        <p class="card-text">Connect with experts and fellow farmers for advice and support.</p>
                        <a href="#" class="btn btn-outline-success disabled">Coming Soon</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
